<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/slidingmenubkg" >
    
   <LinearLayout 
       android:id="@+id/useraccount"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center"
        android:layout_marginTop="32dp"
       android:orientation="horizontal">
       
    <ImageView 
        android:id="@+id/headicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="60dp"
        android:gravity="center_vertical"
        android:src="@drawable/headicon"/>
    
    <TextView 
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:text="用户登录"/>
    
    <ImageView 
        android:id="@+id/righbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:gravity="center_vertical"
        android:src="@drawable/rightarrow"/>
       
   </LinearLayout>
   

    
    
    
    
      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/setting_items_padding_top"
            android:layout_marginTop="20dp">

          
            <RelativeLayout
                android:id="@+id/message_center_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height"
                android:background="@drawable/setting_item_bottom_selector"
                android:clickable="true"
                android:paddingRight="@dimen/setting_item_icon_title_padding" >

                <TextView
                    android:id="@+id/message_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
               		android:layout_marginLeft="40dp"
                    android:duplicateParentState="true"
                    android:text="消息中心" />
                
            </RelativeLayout>
            
            <LinearLayout
		         android:id="@+id/line_3"
				 android:layout_width="match_parent" 
				 android:layout_height="1dp"
				 android:background="#000000"
				 android:orientation="vertical">
		 		</LinearLayout>

            <RelativeLayout
                android:id="@+id/baby_breath_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height"
                android:background="@drawable/setting_item_bottom_selector"
                android:clickable="true"
                android:paddingRight="@dimen/setting_item_icon_title_padding" >


                <TextView
                    android:id="@+id/baby_breath_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"	
					android:layout_marginLeft="40dp"
                    android:duplicateParentState="true"
                    android:text="宝宝呼吸" />
                
            </RelativeLayout>
            
                <LinearLayout
		         android:id="@+id/line_4"
				 android:layout_width="match_parent" 
				 android:layout_height="1dp"
				 android:background="#000000"
				 android:orientation="vertical">
		 		</LinearLayout>

            <RelativeLayout
                android:id="@+id/baby_sleep_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height"
                android:background="@drawable/setting_item_bottom_selector"
                android:clickable="true"
                android:paddingRight="@dimen/setting_item_icon_title_padding" >



                <TextView
                    android:id="@+id/baby_sleep_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
          			android:layout_marginLeft="40dp"
                    android:duplicateParentState="true"
                    android:text="宝宝睡眠" />
                

            </RelativeLayout>
            <!-- 云安全 -->
            
            <LinearLayout
		         android:id="@+id/line_5"
				 android:layout_width="match_parent" 
				 android:layout_height="1dp"
				 android:background="#000000"
				 android:orientation="vertical">
		 		</LinearLayout>

            <RelativeLayout
                android:id="@+id/baby_settings_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height"
                android:background="@drawable/setting_item_bottom_selector"
                android:clickable="true"
                android:paddingRight="@dimen/setting_item_icon_title_padding" >

                <TextView
                    android:id="@+id/baby_settings"
                    android:layout_marginLeft="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:duplicateParentState="true"
                    android:text="设置" />
    
            </RelativeLayout>
            
            
          <LinearLayout
		         android:id="@+id/line_6"
				 android:layout_width="match_parent" 
				 android:layout_height="1dp"
				 android:background="#000000"
				 android:orientation="vertical">
		 		</LinearLayout>
        </LinearLayout>
        
       <RelativeLayout
                android:id="@+id/baby_syncdata_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height"
                android:background="@drawable/setting_item_bottom_selector"
                android:clickable="true"
                android:paddingRight="@dimen/setting_item_icon_title_padding" >

                <TextView
                    android:id="@+id/baby_sync_data"
                    android:layout_marginLeft="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:duplicateParentState="true"
                    android:text="同步数据" />
    
            </RelativeLayout>
            
            
          <LinearLayout
		         android:id="@+id/line_7"
				 android:layout_width="match_parent" 
				 android:layout_height="1dp"
				 android:background="#000000"
				 android:orientation="vertical">
		 		</LinearLayout>

    
</LinearLayout>
