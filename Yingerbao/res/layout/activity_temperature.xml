<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res/com.aizi.yingerbao"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >
    
   <com.aizi.yingerbao.view.TopBarView  
        android:id="@+id/xiaohuhutopbar"  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        custom:titleText="@string/title_activity_temperature"   
        custom:titleSize="8sp"   
        custom:titleColor="@android:color/white"   
        custom:leftBtn="@drawable/leftarrow"
        custom:calendarBtn="@drawable/calendar_icon"/> 
        

    <TextView 
	         android:id="@+id/tempvaluetext"
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         android:textColor="@color/white"
	         android:text="检测温度"
	         android:textSize="64px"
	         android:layout_marginTop="30dp"
	         android:gravity="center_horizontal"/>
        <LinearLayout 
            android:id ="@+id/temperaturevalue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
             android:layout_marginTop="32dp">
            <TextView 
		         android:id="@+id/tempvalue"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:textColor="@color/white"
		         android:text="--"
		         android:textSize="100px"/>
            
             <TextView 
		         android:id="@+id/tempunit"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:textColor="@color/white"
		         android:text="℃"
		         android:textSize="100px"
		        />
            
        </LinearLayout>
        
        
   	     <Button
           android:id="@+id/control_temp_button"
           style="?android:textAppearanceSmall"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="16dp"
           android:text="@string/action_start_temp"
           android:textStyle="bold" />
        
         
    <TextView 
        android:id="@+id/temperaturetextview"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="环境温度："
        android:textSize="30px"
        android:textColor="@color/white"
        android:layout_marginTop="24dp"/>
    
    
     <LinearLayout 
            android:id ="@+id/temperaturechart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
             
          <LinearLayout 
	        android:id="@+id/templist"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:orientation="vertical">
	        <TextView 
	            android:id="@+id/templist1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="10dp"
	            android:text="40℃"/>
	        <TextView 
	            android:id="@+id/templist2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="16dp"
	            android:text="35℃"/>
	        <TextView 
	            android:id="@+id/templist3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="16dp"
	            android:text="30℃"/>
	        <TextView 
	            android:id="@+id/templist4"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="12dp"
	            android:text="25℃"/>
	        <TextView 
	            android:id="@+id/templist5"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="16dp"
	            android:text="20℃"/>
    </LinearLayout>
    
     <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/temperature_linechart"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
         
  </LinearLayout>  
  
     <LinearLayout 
         android:id="@+id/temperaturetime"
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:orientation="horizontal"
         android:layout_marginLeft="10dp"
         android:visibility="gone">
     
