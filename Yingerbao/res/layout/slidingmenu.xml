<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/pink_new" >
    
   <LinearLayout 
       android:id="@+id/user"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center"
       android:layout_marginTop="32dp"
       android:orientation="horizontal">
       
	    <ImageView 
	        android:id="@+id/headicon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="60dp"
	        android:gravity="center_vertical"
	        android:src="@drawable/headicon"/>
	    
	    <TextView 
	        android:id="@+id/useraccount"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:textColor="@color/white"
	        android:text="用户登录"/>
	    
	    <ImageView 
	        android:id="@+id/righbtn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="60dp"
	        android:gravity="center_vertical"
	        android:src="@drawable/rightarrow"/>
       
   		</LinearLayout>
    
       
            
            <LinearLayout
		         android:id="@+id/line_1"
				 android:layout_width="match_parent" 
				 android:layout_height="1dp"
				 android:background="@color/white"
				 android:orientation="vertical"
				 android:layout_marginTop="20dp">
		 	</LinearLayout>
		 		
          
             <RelativeLayout
                android:id="@+id/baby_search_device"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height"
                android:background="@drawable/setting_item_bottom_selector"
                android:clickable="true"
                android:paddingRight="@dimen/setting_item_icon_title_padding" >

                <TextView
                    android:id="@+id/baby_search_text"
                    android:layout_marginLeft="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:duplicateParentState="true"
                    android:text="搜索连接设备" 
                    android:textColor="@color/white"
		            android:textSize="@dimen/common_device_status_text_size"/>
    
            </RelativeLayout>
            
            
          	   <LinearLayout
		         android:id="@+id/line_2"
				 android:layout_width="match_parent" 
				 android:layout_height="1dp"
				 android:background="@color/white"
				 android:orientation="vertical" >
		 		</LinearLayout>
		 		
                  
            <RelativeLayout
                android:id="@+id/appabout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height"
                android:background="@drawable/setting_item_bottom_selector"
                android:clickable="true"
                android:paddingRight="@dimen/setting_item_icon_title_padding" >

	                <TextView
	                    android:id="@+id/about_text"
	                    android:layout_marginLeft="40dp"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_centerVertical="true"
	                    android:duplicateParentState="true"
	                    android:text="关于"
	                    android:textColor="@color/white"
		            android:textSize="@dimen/common_device_status_text_size"/>
    
            </RelativeLayout>

             <LinearLayout
		         android:id="@+id/line_3"
				 android:layout_width="match_parent" 
				 android:layout_height="1dp"
				 android:background="@color/white"
				 android:orientation="vertical" >
		 		</LinearLayout>
          
              <RelativeLayout
                android:id="@+id/baby_data_test"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height"
                android:background="@drawable/setting_item_bottom_selector"
                android:clickable="true"
                android:paddingRight="@dimen/setting_item_icon_title_padding"
                android:textColor="@color/white"
		        android:textSize="@dimen/common_device_status_text_size"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/baby_data_test_text"
                    android:layout_marginLeft="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:duplicateParentState="true"
                    android:text="数据测试"/>
    
            </RelativeLayout>    
    
</LinearLayout>
